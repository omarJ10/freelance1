<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Prediction - LinkedIn | TheBridge</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">

    <!-- Custom TheBridge Theme -->
    <style>
        :root {
            --bs-primary: #ab3567;
            --bs-secondary: #FFE4E1;
            --bs-light: ;
            --bs-dark: #212529;
        }
        body {
            background: var(--bs-light);
            font-family: 'Inter', sans-serif;
        }
        .navbar, .footer {
            background: var(--bs-primary);
        }
        .navbar-brand, .navbar-nav .nav-link, .footer a {
            color: #fff;
            text-decoration: none;
        }
        .sidebar {
            background: var(--bs-secondary);
            min-height: 100vh;
            padding: 1rem;
        }
        .sidebar .logo img {
            max-width: 120px;
            margin-bottom: 1.5rem;
            zoom: 150%;
        }
        .sidebar a {
            display: block;
            padding: .5rem 1rem;
            color: var(--bs-dark);
            font-weight: 500;
            border-radius: .375rem;
            text-decoration: none;
        }
        .sidebar a:hover, .sidebar a.active {
            background: var(--bs-primary);
            color: #fff;
        }
        .sidebar .submenu a {
            padding-left: 2.5rem;
            font-size: .95rem;
            color: var(--bs-dark);
        }
        .sidebar .submenu a:hover {
            background: #e8c1d2;
            color: var(--bs-dark);
        }
        .card {
            border: none;
            border-radius: 1rem;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
        }
        .footer {
            text-align: center;
            padding: 1rem;
            color: #fff;
        }
    </style>
</head>

<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('app_admin') }}">TheBridge</a>
        <div class="d-flex align-items-center ms-auto">
            <form class="d-flex me-3">
                <input class="form-control" type="search" placeholder="Search..." oninput="highlightSearch()">
            </form>
            <img src="{{ asset('assets/vendors/images/1.png') }}" alt="User" class="rounded-circle" width="40">
        </div>
    </div>
</nav>

<div class="container-fluid">
    <div class="row">

        <!-- Sidebar -->
        <aside class="col-md-2 sidebar">
            <div class="text-center logo">
                <a href="{{ path('app_admin') }}">
                    <img src="{{ asset('assets/vendors/images/1.png') }}" alt="Logo">
                </a>
            </div>

            <a href="{{ path('app_admin') }}"><i class="fas fa-home me-2"></i>Home</a>

            <a class="d-flex justify-content-between align-items-center mt-2" data-bs-toggle="collapse" href="#chartsMenu" role="button" aria-expanded="false">
                <span><i class="fas fa-chart-line me-2"></i>Charts</span>
                <i class="fas fa-chevron-down"></i>
            </a>
            <div class="collapse" id="chartsMenu">
                <div class="submenu">
                    <a href="{{ path('app_dashboard_instagram') }}"><i class="fab fa-instagram me-2"></i>Instagram</a>
                </div>
            </div>

            <a class="d-flex justify-content-between align-items-center mt-2 active" data-bs-toggle="collapse" href="#predictionMenu" role="button" aria-expanded="true">
                <span><i class="fas fa-bolt me-2"></i>Prediction</span>
                <i class="fas fa-chevron-down"></i>
            </a>
            <div class="collapse show" id="predictionMenu">
                <div class="submenu">
                    <a href="{{ path('app_prediction_instagram') }}"><i class="fab fa-instagram me-2"></i>Instagram</a>
                    <a href="{{ path('app_prediction_linkedin') }}"><i class="fab fa-linkedin me-2"></i>LinkedIn</a>
                </div>
            </div>

            <a href="{{ path('edit_profile') }}" class="mt-2"><i class="fas fa-user-edit me-2"></i>Edit Profile</a>
            <a href="{{ path('app_logout') }}" class="mt-2"><i class="fas fa-sign-out-alt me-2"></i>Logout</a>
        </aside>

        <!-- Main Content -->
        <main class="col-md-10 p-4">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="mb-0">LinkedIn Prediction</h4>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-white p-2 mb-0">
                        <li class="breadcrumb-item"><a href="{{ path('app_admin') }}" style="color: #f4c542;text-decoration: none;">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Prediction LinkedIn</li>

                    </ol>
                </nav>
            </div>

            <!-- Suggestions Block -->
            <div class="card p-4 mb-4">
                <h5 class="mb-3">Suggestions de Post LinkedIn</h5>
                <form method="post" action="{{ path('app_prediction_linkedin') }}">
                    <div class="row g-3 align-items-center">
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="theme" placeholder="Entrez un thème..." value="{{ theme ?? '' }}" required>
                        </div>
                        <div class="col-md-4 text-end">

                            <button type="submit" class="btn" style="background-color: #f4c542; border-color: #f4c542; color: #212529;">
                                Générer Suggestions
                            </button>
                        </div>
                    </div>
                </form>

                {% if suggestions is defined and suggestions is not empty %}
                    <div class="mt-4">
                        <h6>Suggestions :</h6>
                        <ul>
                            {% for suggestion in suggestions %}
                                <li>{{ suggestion }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
            </div>

            <!-- Prediction Engagement Block -->
            <div class="card p-4">
                <h5 class="mb-3">Prédiction d'Engagement LinkedIn</h5>
                <form method="post" action="{{ path('app_prediction_linkedin') }}">
                    <div class="mb-3">
                        <textarea class="form-control" name="post_content" placeholder="Écrivez votre post ici..." rows="5" required>{{ post_content ?? '' }}</textarea>
                    </div>
                    <div class="text-end">

                        <button type="submit" class="btn" style="background-color: #f4c542; border-color: #f4c542; color: #212529;">
                            Prédire l'Engagement
                        </button>
                    </div>
                </form>

                {% if predicted_comments is not null and predicted_likes is not null and predicted_reposts is not null %}
                    <div class="mt-4">
                        <h6>Résultats de l'Engagement :</h6>
                        <ul class="list-group">
                            <li class="list-group-item">Commentaires prédits : <strong>{{ predicted_comments }}</strong></li>
                            <li class="list-group-item">Likes prédits : <strong>{{ predicted_likes }}</strong></li>
                            <li class="list-group-item">Reposts prédits : <strong>{{ predicted_reposts }}</strong></li>
                        </ul>
                    </div>
                {% endif %}
            </div>

        </main>

    </div>
</div>

<footer class="footer">
    <small>© 2025 TheBridge Dashboard by
        <a href="https://github.com/dropways" target="_blank">Sirine Kabboura</a>
    </small>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    function highlightSearch() {
        const kw = document.querySelector('input[type=search]').value.trim();
        if (!kw) return;
        document.querySelectorAll('mark').forEach(m => m.replaceWith(m.textContent));
        document.querySelectorAll('body *:not(script):not(style)').forEach(el => {
            el.childNodes.forEach(n => {
                if (n.nodeType===3 && new RegExp(kw,'i').test(n.nodeValue)) {
                    const span = document.createElement('span');
                    span.innerHTML = n.nodeValue.replace(new RegExp(`(${kw})`,'gi'), '<mark>$1</mark>');
                    n.replaceWith(span);
                }
            });
        });
    }
</script>
</body>
</html>
