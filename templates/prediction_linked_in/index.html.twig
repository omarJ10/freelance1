<script>
    function highlightSearch() {
        const keyword = document.getElementById('searchInput').value.trim();

        // Réinitialiser les anciens surlignages
        const highlights = document.querySelectorAll('span.highlight');
        highlights.forEach(span => {
            span.replaceWith(span.textContent); // Remplace le span par son contenu texte
        });

        if (!keyword) {
            return; // Ne rien faire si le champ de recherche est vide
        }

        // Parcourir tous les nœuds de texte visibles
        const elements = document.querySelectorAll('body *:not(script):not(style):not(textarea):not(input)');
        elements.forEach(element => {
            element.childNodes.forEach(node => {
                if (node.nodeType === 3) { // Vérifier si c'est un nœud de texte
                    const regex = new RegExp(`(${keyword})`, 'gi');
                    if (regex.test(node.nodeValue)) {
                        const span = document.createElement('span');
                        span.className = 'highlight';
                        span.innerHTML = node.nodeValue.replace(regex, '<mark>$1</mark>');
                        node.replaceWith(span);
                    }
                }
            });
        });

        // Défilement automatique vers le premier résultat trouvé
        const firstMatch = document.querySelector('mark');
        if (firstMatch) {
            firstMatch.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
    }

</script>
