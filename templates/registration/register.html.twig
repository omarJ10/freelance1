<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>TheBridge - Register</title>

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom Pink/White Theme -->
  <style>
    :root {
      --bs-primary: #ab3567;
      --bs-light: #f9f9f9;
    }
    body {
      background-color: var(--bs-light);
      font-family: 'Inter', sans-serif;
      height: 100vh;
      margin: 0;
    }
    .left-side {
      background-color: #ffe6f2;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .left-side img {
      max-width: 80%;
      height: auto;
    }
    .form-side {
      background: #ffffff;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 3rem;
    }
    .btn-primary {
      background-color: var(--bs-primary);
      border: none;
    }
    .btn-primary:hover, .btn-primary:focus {
      background-color: #922c5a;
    }
    a {
      color: var(--bs-primary);
    }
    a:hover {
      text-decoration: underline;
      color: #922c5a;
    }
  </style>
</head>

<body>
<div class="container-fluid h-100">
  <div class="row h-100">

    <!-- Left Image Section -->
    <div class="col-md-6 left-side d-none d-md-flex">
      <img src="{{ asset('assets/vendors/images/registration.png') }}" alt="Register Illustration">
    </div>

    <!-- Right Form Section -->
    <div class="col-md-6 form-side">
      <div style="width: 100%; max-width: 500px;">
        <h1 class="h3 text-center text-dark mb-2">Register</h1>
        <p class="text-center text-muted mb-4">Create your account to join our community.</p>

        {% for flash_error in app.flashes('verify_email_error') %}
          <div class="alert alert-danger">{{ flash_error }}</div>
        {% endfor %}

        {{ form_start(registrationForm, {'attr': {}, 'countries': countries|default([])}) }}
        {{ form_errors(registrationForm) }}

        <div class="mb-3">
          {{ form_label(registrationForm.username, null, {'label_attr': {'class': 'form-label'}}) }}
          {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(registrationForm.username) }}
        </div>

        <div class="mb-3">
          {{ form_label(registrationForm.dateOfBirth, null, {'label_attr': {'class': 'form-label'}}) }}
          {{ form_widget(registrationForm.dateOfBirth, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(registrationForm.dateOfBirth) }}
        </div>

        <div class="mb-3">
          {{ form_label(registrationForm.phoneNumber, null, {'label_attr': {'class': 'form-label'}}) }}
          {{ form_widget(registrationForm.phoneNumber, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(registrationForm.phoneNumber) }}
        </div>

        <div class="mb-3">
          {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
          {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(registrationForm.email) }}
        </div>

        <div class="mb-3">
          {{ form_label(registrationForm.plainPassword, null, {'label_attr': {'class': 'form-label'}}) }}
          {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(registrationForm.plainPassword) }}
        </div>

        <div class="form-check mb-3">
          {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
          {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
          {{ form_errors(registrationForm.agreeTerms) }}
        </div>

        <div class="mb-3">
          {{ form_label(registrationForm.gender, null, {'label_attr': {'class': 'form-label'}}) }}
          <div class="d-flex gap-2">
            {{ form_widget(registrationForm.gender, {'attr': {'class': 'form-check-input'}}) }}
          </div>
          {{ form_errors(registrationForm.gender) }}
        </div>

        <div class="mb-3">
          {{ form_label(registrationForm.country, null, {'label_attr': {'class': 'form-label'}}) }}
          {{ form_widget(registrationForm.country, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(registrationForm.country) }}
        </div>

        <div class="mb-3">
          {{ form_label(registrationForm.address, null, {'label_attr': {'class': 'form-label'}}) }}
          {{ form_widget(registrationForm.address, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(registrationForm.address) }}
        </div>

        <div class="d-grid">
          <button type="submit" class="btn btn-primary">Register</button>
        </div>

        {{ form_end(registrationForm) }}

        <div class="mt-3 text-center">
          <small class="text-muted">Already have an account?
            <a href="{{ path('app_login') }}">Login here</a>
          </small>
        </div>
      </div>
    </div>

  </div>
</div>

<!-- Bootstrap Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>