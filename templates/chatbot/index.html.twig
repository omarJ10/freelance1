<script>
    document.getElementById('send-message').addEventListener('click', async function () {
        const userInput = document.getElementById('user-input').value.trim();
        const chatMessages = document.getElementById('chat-messages');

        if (!userInput) {
            alert('Please type a message.');
            return;
        }

        // Append the user's message to the chat
        const userMessage = `
        <li class="clearfix">
            <span class="chat-img">
                <img src="vendors/images/chat-img1.jpg" alt="">
            </span>
            <div class="chat-body clearfix">
                <p>${userInput}</p>
                <div class="chat_time">Now</div>
            </div>
        </li>
    `;
        chatMessages.querySelector('ul').innerHTML += userMessage;

        // Clear the input field
        document.getElementById('user-input').value = '';

        try {
            // Send the POST request to the Flask API
            const response = await fetch('/chatbot/response', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ question: userInput }),
            });

            const data = await response.json();

            if (response.ok && data.response) {
                // Append the chatbot's response to the chat
                const botMessage = `
                <li class="clearfix admin_chat">
                    <span class="chat-img">
                        <img src="vendors/images/chat-img2.jpg" alt="">
                    </span>
                    <div class="chat-body clearfix">
                        <p>${data.response}</p>
                        <div class="chat_time">Now</div>
                    </div>
                </li>
            `;
                chatMessages.querySelector('ul').innerHTML += botMessage;
            } else {
                // Handle errors
                const errorMessage = `
                <li class="clearfix admin_chat">
                    <span class="chat-img">
                        <img src="vendors/images/chat-img2.jpg" alt="">
                    </span>
                    <div class="chat-body clearfix">
                        <p>Error: ${data.error}</p>
                        <div class="chat_time">Now</div>
                    </div>
                </li>
            `;
                chatMessages.querySelector('ul').innerHTML += errorMessage;
            }
        } catch (error) {
            console.error('Error connecting to chatbot API:', error);
            const errorMessage = `
            <li class="clearfix admin_chat">
                <span class="chat-img">
                    <img src="vendors/images/chat-img2.jpg" alt="">
                </span>
                <div class="chat-body clearfix">
                    <p>Error connecting to chatbot. Please try again later.</p>
                    <div class="chat_time">Now</div>
                </div>
            </li>
        `;
            chatMessages.querySelector('ul').innerHTML += errorMessage;
        }
    });

</script>

<script>
    // Fetch and display chat history when the page loads
    document.addEventListener('DOMContentLoaded', async function () {
        const chatMessages = document.getElementById('chat-messages');

        try {
            const response = await fetch('/chatbot/history', {
                method: 'GET',
            });
            const history = await response.json();

            // Display each message in the chat
            history.forEach(msg => {
                const messageHTML = `
                <li class="clearfix ${msg.sender === 'chatbot' ? 'admin_chat' : ''}">
                    <span class="chat-img">
                        <img src="vendors/images/chat-img${msg.sender === 'chatbot' ? '2' : '1'}.jpg" alt="">
                    </span>
                    <div class="chat-body clearfix">
                        <p>${msg.message}</p>
                        <div class="chat_time">${msg.created_at}</div>
                        <button class="delete-message">Delete</button>

                    </div>
                </li>
            `;
                chatMessages.querySelector('ul').innerHTML += messageHTML;
            });
        } catch (error) {
            console.error('Error fetching chat history:', error);
        }
    });

</script>
<script>// Delete individual message
    document.addEventListener('click', async function (e) {
        if (e.target.classList.contains('delete-message')) {
            const messageElement = e.target.closest('li');
            const messageId = messageElement.getAttribute('data-message-id');

            try {
                const response = await fetch(`/chatbot/message/delete/${messageId}`, {
                    method: 'DELETE',
                });

                const data = await response.json();

                if (response.ok) {
                    messageElement.remove(); // Remove the message from the DOM
                    alert('Message deleted successfully');
                } else {
                    alert(`Error deleting message: ${data.error}`);
                }
            } catch (error) {
                console.error('Error deleting message:', error);
                alert('Failed to delete the message. Please try again later.');
            }
        }
    });

    // Delete entire conversation
    document.getElementById('delete-conversation').addEventListener('click', async function () {
        if (!confirm('Are you sure you want to delete the entire conversation?')) {
            return;
        }

        try {
            const response = await fetch(`/chatbot/conversation/delete/1`, { // Replace `1` with the dynamic user ID
                method: 'DELETE',
            });

            const data = await response.json();

            if (response.ok) {
                // Clear all messages from the chat
                document.getElementById('chat-messages').querySelector('ul').innerHTML = '';
                alert('Conversation deleted successfully');
            } else {
                alert(`Error deleting conversation: ${data.error}`);
            }
        } catch (error) {
            console.error('Error deleting conversation:', error);
            alert('Failed to delete the conversation. Please try again later.');
        }
    });
</script>
